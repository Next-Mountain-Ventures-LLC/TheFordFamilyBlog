---
import { buttonVariants } from "@/components/ui/button";
import { Image } from 'astro:assets';
import MobileMenu from "./MobileMenu";
---

<header
  class="bg-background/95 supports-[backdrop-filter]:bg-background/60 sticky top-0 z-50 w-full border-b backdrop-blur"
>
  <div
    class="container flex h-20 items-center space-x-4 sm:justify-between sm:space-x-0"
  >
    <div class="flex gap-6 md:gap-10">
      <a href="/" class="flex items-center space-x-1">
        <span class="inline-block font-bold text-2xl md:text-3xl font-display tracking-wide text-primary-foreground">The Ford Family</span>
        <span class="text-accent-foreground text-xl md:text-2xl">.life</span>
      </a>
    </div>
    <div class="flex flex-1 items-center justify-end space-x-4">
      <nav class="hidden md:flex items-center space-x-4">
        <a
          href="/"
          class="text-sm font-medium transition-colors hover:text-primary"
        >
          Home
        </a>
        <a
          href="/salicia"
          class="text-sm font-medium transition-colors hover:text-primary"
        >
          Salicia
        </a>
        <a
          href="/joshua"
          class="text-sm font-medium transition-colors hover:text-primary"
        >
          Joshua
        </a>
        <a
          href="/jackson"
          class="text-sm font-medium transition-colors hover:text-primary"
        >
          Jackson
        </a>
        <a
          href="/finley"
          class="text-sm font-medium transition-colors hover:text-primary"
        >
          Finley
        </a>
        <a
          href="/subscribe"
          class="text-sm font-medium transition-colors hover:text-primary"
        >
          Subscribe
        </a>
        <a
          href="https://www.youtube.com/@TheFordFamilyLife"
          target="_blank"
          rel="noreferrer"
          class={buttonVariants({ variant: 'outline', size: 'sm' })}
        >
          <span class="mr-2">YouTube</span>
          <svg viewBox="0 0 24 24" class="h-4 w-4 fill-current">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
        </a>
      </nav>
      <MobileMenu client:load />
    </div>
  </div>
</header>
