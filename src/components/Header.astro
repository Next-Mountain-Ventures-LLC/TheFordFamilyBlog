---
import { buttonVariants } from "@/components/ui/button";
import { Image } from 'astro:assets';
---

<header
  class="bg-background/98 supports-[backdrop-filter]:bg-background/90 sticky top-0 z-50 w-full border-b border-primary/10 backdrop-blur"
>
  <div
    class="container flex h-24 items-center space-x-4 sm:justify-between sm:space-x-0"
  >
    <div class="flex gap-6 md:gap-10">
      <a href="/" class="flex items-center space-x-2 group">
        <div class="hidden md:flex items-center mr-3">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-primary transition-transform duration-300 group-hover:rotate-12">
            <path d="M8 22h8"/>
            <path d="M7 10h10"/>
            <path d="M10 2v8"/>
            <path d="M14 2v8"/>
            <path d="M17 6v6.59a4 4 0 0 1-.845 2.44L12 22l-4.155-6.97A4 4 0 0 1 7 12.59V6c0-1.1.9-2 2-2h6c1.1 0 2 .9 2 2Z"/>
          </svg>
        </div>
        <div>
          <span class="inline-block font-light text-2xl font-display tracking-wide text-foreground">The Ford <span class="font-semibold text-primary">Family</span></span>
          <span class="text-accent font-light">.life</span>
        </div>
      </a>
    </div>
    <div class="flex flex-1 items-center justify-end space-x-4">
      <div class="hidden md:block h-6 mx-8 w-px bg-border/50"></div>
      <nav class="hidden md:flex items-center space-x-6">
        <a
          href="/"
          class="text-sm uppercase tracking-wide font-light transition-all hover:text-primary relative group"
        >
          <span>Home</span>
          <span class="absolute -bottom-1 left-0 w-0 h-px bg-primary transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a
          href="/salicia"
          class="text-sm uppercase tracking-wide font-light transition-all hover:text-primary relative group"
        >
          <span>Salicia</span>
          <span class="absolute -bottom-1 left-0 w-0 h-px bg-primary transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a
          href="/joshua"
          class="text-sm uppercase tracking-wide font-light transition-all hover:text-primary relative group"
        >
          <span>Joshua</span>
          <span class="absolute -bottom-1 left-0 w-0 h-px bg-primary transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a
          href="/jackson"
          class="text-sm uppercase tracking-wide font-light transition-all hover:text-primary relative group"
        >
          <span>Jackson</span>
          <span class="absolute -bottom-1 left-0 w-0 h-px bg-primary transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a
          href="/finley"
          class="text-sm uppercase tracking-wide font-light transition-all hover:text-primary relative group"
        >
          <span>Finley</span>
          <span class="absolute -bottom-1 left-0 w-0 h-px bg-primary transition-all duration-300 group-hover:w-full"></span>
        </a>
        <div class="h-6 mx-2 w-px bg-border/50"></div>
        <a
          href="https://www.youtube.com/"
          target="_blank"
          rel="noreferrer"
          class="text-sm uppercase tracking-wide font-light flex items-center transition-all hover:text-primary relative group"
        >
          <span class="mr-2">YouTube</span>
          <svg viewBox="0 0 24 24" class="h-4 w-4 fill-current">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
          <span class="absolute -bottom-1 left-0 w-0 h-px bg-primary transition-all duration-300 group-hover:w-full"></span>
        </a>
      </nav>
      <button
        type="button"
        class="inline-flex md:hidden items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none ring-offset-background hover:bg-accent hover:text-accent-foreground h-10 py-2 px-4"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6">
          <line x1="4" x2="20" y1="12" y2="12"></line>
          <line x1="4" x2="20" y1="6" y2="6"></line>
          <line x1="4" x2="20" y1="18" y2="18"></line>
        </svg>
        <span class="sr-only">Toggle menu</span>
      </button>
    </div>
  </div>
</header>
