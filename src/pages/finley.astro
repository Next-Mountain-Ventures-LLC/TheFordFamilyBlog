---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { buttonVariants } from "@/components/ui/button";
import { Image } from 'astro:assets';
import { getPostsByAuthor } from '@/lib/wordpress';
import BlogCarousel from "@/components/BlogCarousel";
import FinleyContactForm from "@/components/FinleyContactForm";
import finleyImage from '../assets/finley-profile-image_nw_40f934be.jpg';
import "../styles/finley-animations.css";

// Finley's modeling portfolio images
const modelingImages = [
  {
    url: "https://images.unsplash.com/photo-1747919778501-033bae25bdf9?w=600&h=400&auto=format&fit=crop&q=80",
    caption: "School uniform inspired photoshoot"
  },
  {
    url: "https://images.unsplash.com/photo-1629350260660-6053fe4fcf47?w=600&h=400&auto=format&fit=crop&q=80",
    caption: "Simple portrait session"
  },
  {
    url: "https://images.unsplash.com/photo-1712574824062-2ae6156b5cfd?w=600&h=400&auto=format&fit=crop&q=80",
    caption: "Rainy day school uniform series"
  },
  {
    url: "https://images.unsplash.com/photo-1676149038939-95fb9eedfdfa?w=600&h=400&auto=format&fit=crop&q=80",
    caption: "Pink backdrop photoshoot"
  },
  {
    url: "https://images.unsplash.com/photo-1581132285926-a4c91a76ef14?w=600&h=400&auto=format&fit=crop&q=80",
    caption: "Blue-eyed portrait study"
  },
  {
    url: "https://images.unsplash.com/photo-1667668837657-6c34aaf06133?w=600&h=400&auto=format&fit=crop&q=80",
    caption: "Pink fashion editorial"
  }
];

// Video content
const videoContent = [
  {
    title: "My First Cosplay Tutorial",
    thumbnail: "https://images.unsplash.com/photo-1636509670951-3bd2911cbac9?w=600&h=400&auto=format&fit=crop&q=80",
    description: "Learn how I created my first anime character cosplay from start to finish",
    duration: "12:48",
    date: "April 2, 2025"
  },
  {
    title: "Behind the Scenes: Spring Photoshoot",
    thumbnail: "https://images.unsplash.com/photo-1684527298165-489ff65e2338?w=600&h=400&auto=format&fit=crop&q=80",
    description: "Come along with me for a day of photoshooting in the cherry blossom garden",
    duration: "8:15",
    date: "March 15, 2025"
  },
  {
    title: "Anime-Inspired Makeup Tutorial",
    thumbnail: "https://images.unsplash.com/photo-1697059171242-79d8eeaa56b2?w=600&h=400&auto=format&fit=crop&q=80",
    description: "Creating the perfect anime-inspired makeup look for cosplay or everyday wear",
    duration: "15:32",
    date: "February 28, 2025"
  },
  {
    title: "My Favorite Anime Series Review",
    thumbnail: "https://images.unsplash.com/photo-1711276320022-25adbff1def7?w=600&h=400&auto=format&fit=crop&q=80",
    description: "I review my top 5 favorite anime series and why I love them",
    duration: "22:17",
    date: "January 10, 2025"
  }
];


// Get Finley's blog posts from WordPress
let finleyPosts = [];
try {
  const posts = await getPostsByAuthor("Finley Ford", 10);
  finleyPosts = posts;
} catch (error) {
  console.error("Error fetching posts for Finley:", error);
}
---

<BaseLayout
  title="Finley Ford - Young Model & Anime Enthusiast | The Ford Family"
  description="Meet Finley Ford, a young model, anime enthusiast, and content creator who shares her passion for fashion, cosplay, and Japanese culture."
>
  <!-- Background anime pattern and cherry blossoms -->
  <div class="anime-bg min-h-screen bg-gradient-to-b from-pink-100 via-purple-100 to-pink-100">
    <!-- Cherry tree background element -->
    <div class="cherry-tree"></div>
    
    <!-- Falling petals animations -->
    <div class="falling-petal" style="left: 10%; top: -5%;"></div>
    <div class="falling-petal" style="left: 25%; top: -5%;"></div>
    <div class="falling-petal" style="left: 40%; top: -5%;"></div>
    <div class="falling-petal" style="left: 55%; top: -5%;"></div>
    <div class="falling-petal" style="left: 70%; top: -5%;"></div>
    <div class="falling-petal" style="left: 85%; top: -5%;"></div>
    <div class="falling-petal" style="left: 15%; top: -5%;"></div>
    <div class="falling-petal" style="left: 30%; top: -5%;"></div>
    <div class="falling-petal" style="left: 45%; top: -5%;"></div>
    <div class="falling-petal" style="left: 60%; top: -5%;"></div>
    
    <!-- Anime girl background images -->
    <img src="https://images.unsplash.com/photo-1623252729328-9941b271ad48?w=600&h=400&auto=format&fit=crop&q=80" alt="Anime girl" class="anime-bg-image image1" />
    <img src="https://images.unsplash.com/photo-1697205153149-a60e3a2ddc61?w=600&h=400&auto=format&fit=crop&q=80" alt="Anime girl" class="anime-bg-image image2" />
    <img src="https://images.unsplash.com/photo-1759302307377-e72f6a6918a1?w=600&h=400&auto=format&fit=crop&q=80" alt="Anime drawing" class="anime-bg-image image3" />
    
    <!-- Hero Section -->
    <section class="relative py-24 overflow-hidden">
      <div class="container mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div class="order-2 lg:order-1 animate-fade-in z-10">
            <div class="inline-block bg-pink-300/40 backdrop-blur-sm px-4 py-1 rounded-full text-pink-800 text-sm font-medium mb-6">
              Young Model & Anime Enthusiast
            </div>
            <h1 class="text-4xl md:text-6xl font-bold font-display mb-6 text-pink-800 leading-tight">
              Finley Ford
            </h1>
            <p class="text-xl text-pink-700 mb-6 font-medium">
              Content Creator, Aspiring Model & Japanese Culture Lover
            </p>
            <div class="prose prose-lg mb-8 max-w-none">
              <p class="text-lg text-gray-700">
                Welcome to my colorful world! I'm Finley, and I'm passionate about anime, modeling, and creating content inspired by Japanese culture and fashion. I love bringing anime characters to life through cosplay and sharing my creative journey.
              </p>
              <p class="text-lg text-gray-700">
                When I'm not in front of the camera or creating videos, you can find me drawing manga-style art, practicing Japanese, and watching my favorite anime series. Join me as I explore the magical intersection of fashion, art, and storytelling!
              </p>
            </div>
            
            <div class="flex flex-wrap gap-4 mt-8">
              <a 
                href="#videos"
                class={buttonVariants({ size: "lg", className: "bg-pink-500 hover:bg-pink-600 text-white border-none" })}
              >
                Watch My Videos
              </a>
              <a 
                href="#gallery"
                class={buttonVariants({ variant: "outline", size: "lg", className: "border-pink-300 text-pink-700 hover:bg-pink-100" })}
              >
                Modeling Gallery
              </a>
            </div>
          </div>
          <div class="order-1 lg:order-2 flex justify-center relative z-10">
            <div class="absolute w-64 h-64 rounded-full bg-pink-300/30 blur-3xl -z-10 opacity-50 animate-pulse"></div>
            <div class="scrapbook-photo" style="--rotate: 2deg">
              <div class="scrapbook-tape"></div>
              <img 
                src={finleyImage.src} 
                alt="Finley Ford" 
                class="rounded-sm max-w-sm w-full shadow-xl object-cover hover:scale-[1.01] transition-all duration-300 border-4 border-pink-100"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Video Content Section -->
    <section id="videos" class="py-16 bg-pink-100/80 backdrop-blur-sm">
      <div class="container mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold font-display mb-3 text-center text-pink-800">
          My Video Content
        </h2>
        <p class="text-center text-pink-600 mb-12 max-w-3xl mx-auto">
          Join me on my creative journey through anime, cosplay, and behind-the-scenes modeling
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {videoContent.map((video) => (
            <div class="video-card bg-white/60 backdrop-blur-sm border border-pink-200 rounded-xl overflow-hidden">
              <div class="relative h-52 overflow-hidden">
                <img 
                  src={video.thumbnail} 
                  alt={video.title}
                  class="w-full h-full object-cover"
                />
                <div class="video-play-button"></div>
              </div>
              <div class="p-6">
                <div class="flex justify-between items-center mb-2">
                  <h3 class="text-xl font-bold text-pink-800">{video.title}</h3>
                  <span class="px-3 py-1 bg-pink-200/70 text-pink-700 text-xs rounded-full">
                    {video.duration}
                  </span>
                </div>
                <p class="text-gray-600 text-sm mb-3">
                  {video.description}
                </p>
                <div class="flex justify-between items-center">
                  <span class="text-xs text-pink-500">{video.date}</span>
                  <a 
                    href="#"
                    class={buttonVariants({ size: "sm", className: "bg-pink-500 hover:bg-pink-600 text-white border-none" })}
                  >
                    Watch Video
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        <div class="text-center mt-10">
          <a 
            href="https://www.youtube.com/@TheFordFamilyLife"
            target="_blank"
            rel="noreferrer"
            class={buttonVariants({ size: "lg", variant: "outline", className: "border-pink-400 text-pink-700 hover:bg-pink-200/50" })}
          >
            Visit Our YouTube Channel
          </a>
        </div>
      </div>
    </section>

    <!-- Blog Posts Section -->
    {finleyPosts.length > 0 && (
      <section id="blog" class="py-16 bg-gradient-to-r from-pink-50 to-purple-50">
        <div class="container mx-auto">
          <BlogCarousel 
            client:visible
            title="Finley's Articles"
            description="Join me as I write about my favorite anime, modeling experiences, and creative projects."
            posts={finleyPosts}
          />
        </div>
      </section>
    )}

    <!-- Modeling Gallery -->
    <section id="gallery" class="py-16 bg-purple-100/80 backdrop-blur-sm">
      <div class="container mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold font-display mb-3 text-center text-purple-800">
          Modeling Gallery
        </h2>
        <p class="text-center text-purple-600 mb-12 max-w-3xl mx-auto">
          Explore my portfolio of photoshoots and creative modeling projects
        </p>
        
        <div class="modeling-gallery">
          {modelingImages.map((image, index) => (
            <div class="modeling-item" style={`--rotate: ${(index % 2 === 0) ? "2deg" : "-1deg"}`}>
              <img 
                src={image.url} 
                alt={image.caption}
                class="rounded-lg shadow-lg border-4 border-white"
              />
              <div class="modeling-caption">
                <p class="text-sm font-medium">{image.caption}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    
    <!-- Contact Section -->
    <section id="contact" class="py-16 bg-gradient-to-b from-purple-50 to-pink-100 backdrop-blur-sm">
      <div class="container max-w-4xl mx-auto">
        <div class="bg-white/80 border border-pink-200 p-8 rounded-lg backdrop-blur-sm shadow-xl">
          <h2 class="text-3xl font-bold font-display mb-6 text-center text-pink-800">
            Connect With Me
          </h2>
          <p class="text-center text-pink-600 mb-8">
            Have questions about my modeling work or want to collaborate on a project? Send me a message!
          </p>
          
          <FinleyContactForm client:load />
        </div>
      </div>
    </section>
  </div>
</BaseLayout>