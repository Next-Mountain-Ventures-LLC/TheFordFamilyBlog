---
import AdminLayout from "@/layouts/AdminLayout.astro";
import { getCollection } from 'astro:content';
import { buttonVariants } from "@/components/ui/button";

// Get blog posts from content collection
const allBlogPosts = await getCollection('blog');

// Transform content collection entries into blog post objects and sort by date (newest first)
const blogPosts = allBlogPosts.map(entry => ({
  title: entry.data.title,
  description: entry.data.description,
  date: entry.data.date,
  author: entry.data.author,
  category: entry.data.category,
  slug: entry.slug
})).sort((a, b) => {
  const dateA = new Date(a.date);
  const dateB = new Date(b.date);
  return dateB - dateA;
});
---

<AdminLayout title="Manage Blog Posts">
  <div class="bg-white rounded-lg shadow-sm border border-border p-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">Manage Blog Posts</h1>
      
      <a href="/admin/new-post" class={buttonVariants({ variant: "default" })}>
        Create New Post
      </a>
    </div>
    
    {blogPosts.length === 0 ? (
      <div class="text-center py-12">
        <h3 class="text-lg font-medium mb-2">No blog posts yet</h3>
        <p class="text-muted-foreground mb-6">Create your first blog post to get started!</p>
        <a href="/admin/new-post" class={buttonVariants({ variant: "default" })}>
          Create Your First Post
        </a>
      </div>
    ) : (
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="border-b border-border">
              <th class="text-left py-3 px-4 font-semibold">Title</th>
              <th class="text-left py-3 px-4 font-semibold">Category</th>
              <th class="text-left py-3 px-4 font-semibold">Author</th>
              <th class="text-left py-3 px-4 font-semibold">Date</th>
              <th class="text-right py-3 px-4 font-semibold">Actions</th>
            </tr>
          </thead>
          <tbody>
            {blogPosts.map(post => (
              <tr class="border-b border-border hover:bg-muted/10">
                <td class="py-4 px-4">
                  <div class="font-medium">{post.title}</div>
                  <div class="text-muted-foreground text-sm line-clamp-1">{post.description}</div>
                </td>
                <td class="py-4 px-4">
                  <span class="px-2 py-1 bg-primary/10 text-primary-foreground text-xs rounded-full">
                    {post.category}
                  </span>
                </td>
                <td class="py-4 px-4">{post.author}</td>
                <td class="py-4 px-4">{post.date}</td>
                <td class="py-4 px-4 text-right">
                  <div class="flex justify-end space-x-2">
                    <a 
                      href={`/blog/${post.slug}`} 
                      target="_blank"
                      class="px-2 py-1 text-xs bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors"
                    >
                      View
                    </a>
                    <button 
                      class="px-2 py-1 text-xs bg-amber-500 text-white rounded hover:bg-amber-600 transition-colors"
                      id={`edit-${post.slug}`}
                    >
                      Edit
                    </button>
                    <button 
                      class="px-2 py-1 text-xs bg-red-500 text-white rounded hover:bg-red-600 transition-colors"
                      id={`delete-${post.slug}`}
                    >
                      Delete
                    </button>
                  </div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    )}
  </div>
  
  <script>
    // Add event listeners for edit and delete buttons
    // This is just for demonstration - in a real app you'd implement actual editing/deleting
    document.addEventListener('DOMContentLoaded', () => {
      // Edit buttons
      document.querySelectorAll('button[id^="edit-"]').forEach(button => {
        button.addEventListener('click', () => {
          const slug = button.id.replace('edit-', '');
          alert(`Edit functionality would edit post with slug: ${slug}`);
        });
      });
      
      // Delete buttons
      document.querySelectorAll('button[id^="delete-"]').forEach(button => {
        button.addEventListener('click', () => {
          const slug = button.id.replace('delete-', '');
          if (confirm(`Are you sure you want to delete the post with slug: ${slug}?`)) {
            alert(`Delete functionality would delete post with slug: ${slug}`);
          }
        });
      });
    });
  </script>
</AdminLayout>