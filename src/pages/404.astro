---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { buttonVariants } from "@/components/ui/button";
---

<BaseLayout 
  title="Page Not Found - The Ford Family" 
  description="Sorry, the page you're looking for could not be found."
>
  <div class="container max-w-4xl mx-auto py-20 text-center">
    <div class="scrapbook-paper bg-white/95">
      <h1 class="text-5xl md:text-7xl font-bold font-display mb-4 text-primary-foreground">
        404
      </h1>
      <h2 class="text-2xl md:text-3xl font-display mb-6 text-muted-foreground">
        Page Not Found
      </h2>
      <p class="mb-8 max-w-md mx-auto">
        Sorry, the page you're looking for doesn't exist or has been moved. 
        Please check the URL or navigate back to our homepage.
      </p>
      <div class="flex justify-center gap-4">
        <a href="/" class={buttonVariants({ variant: 'default' })}>
          Back to Homepage
        </a>
        <a href="/blog" class={buttonVariants({ variant: 'outline' })}>
          Browse Our Blog
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
