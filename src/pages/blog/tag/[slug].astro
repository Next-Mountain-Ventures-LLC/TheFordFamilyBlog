---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { buttonVariants } from "@/components/ui/button";
import { Image } from 'astro:assets';
import { getPostsByTag, getTagBySlug, getTags } from '@/lib/wordpress';

// Enable server-side rendering for dynamic routes
export const prerender = false;

// Get the current tag slug from the URL
const { slug } = Astro.params;

// Fetch the tag data from WordPress API
let tag = null;
let tagPosts = [];

try {
  console.log(`Attempting to fetch tag with slug: ${slug}`);
  tag = await getTagBySlug(slug as string);
  
  if (tag) {
    console.log(`Successfully fetched tag: ${tag.name}`);
    // Fetch posts for this tag
    tagPosts = await getPostsByTag(tag.id, 20);
    console.log(`Successfully fetched ${tagPosts.length} posts for tag ${tag.name}`);
  } else {
    console.log(`Tag with slug ${slug} not found`);
    return Astro.redirect('/blog');
  }
} catch (error) {
  console.error(`Error fetching tag or posts: ${error}`);
  return Astro.redirect('/blog');
}

// Fetch all tags for the navigation
let allTags = [];
try {
  allTags = await getTags();
  // Filter out tags with no posts
  allTags = allTags.filter(t => t.count > 0);
  // Sort by post count (descending)
  allTags.sort((a, b) => b.count - a.count);
  // Limit to top 20 tags
  allTags = allTags.slice(0, 20);
} catch (error) {
  console.error('Error fetching all tags:', error);
}
---

<BaseLayout 
  title={`${tag.name} - The Ford Family Blog`}
  description={tag.description || `Articles tagged with ${tag.name} from The Ford Family Blog.`}
>
  <div class="bg-muted/20 py-16 border-b border-primary/10">
    <div class="container mx-auto text-center">
      <h1 class="text-4xl md:text-6xl font-bold font-display mb-4 text-primary-foreground">
        #{tag.name}
      </h1>
      {tag.description && (
        <p class="text-xl max-w-2xl mx-auto text-muted-foreground mb-8">
          {tag.description}
        </p>
      )}
      <div class="flex flex-wrap justify-center gap-3 max-w-2xl mx-auto">
        {allTags.map((t) => (
          <a 
            href={`/blog/tag/${t.slug}`}
            class={`px-4 py-2 shadow-sm rounded-full text-sm transition-colors ${t.id === tag.id ? 'bg-primary text-white' : 'bg-white/80 hover:bg-white'}`}
          >
            #{t.name}
          </a>
        ))}
      </div>
    </div>
  </div>

  <main class="py-16">
    <div class="container mx-auto">
      {tagPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {tagPosts.map((post) => (
            <article class="scrapbook-paper bg-white/90">
              <div class="mb-4">
                <div class="scrapbook-photo w-full" style={`--rotate: ${Math.random() > 0.5 ? "" : "-"}${Math.floor(Math.random() * 3)}deg;`}>
                  <div class="scrapbook-tape"></div>
                  <img 
                    src={post.imageUrl} 
                    alt={post.title}
                    class="w-full h-48 object-cover rounded-sm"
                  />
                </div>
              </div>
              <div class="mb-3">
                <a 
                  href={post.categorySlug ? `/blog/category/${post.categorySlug}` : '#'} 
                  class="inline-block px-3 py-1 bg-primary/10 text-primary-foreground text-xs rounded-full hover:bg-primary/20 transition-colors"
                >
                  {post.category}
                </a>
              </div>
              <h3 class="text-xl font-bold font-display mb-2 leading-tight">
                <a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors">
                  {post.title}
                </a>
              </h3>
              <p class="text-muted-foreground text-sm mb-4 line-clamp-3">
                {post.excerpt}
              </p>
              <div class="flex justify-between items-center text-xs text-muted-foreground mb-4">
                <a 
                  href={post.authorSlug ? `/blog/author/${post.authorSlug}` : '#'}
                  class="hover:text-primary transition-colors"
                >
                  {post.author}
                </a>
                <span>{post.date}</span>
              </div>
              <a 
                href={`/blog/${post.slug}`} 
                class={buttonVariants({ variant: "outline", size: "sm" })}
              >
                Read Post
              </a>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <h2 class="text-2xl font-bold font-display mb-4">No Posts Found</h2>
          <p class="text-muted-foreground mb-6">There are no posts with this tag yet. Check back soon!</p>
          <a 
            href="/blog" 
            class={buttonVariants({ variant: "default" })}
          >
            Back to Blog
          </a>
        </div>
      )}
    </div>
  </main>
</BaseLayout>