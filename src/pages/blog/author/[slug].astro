---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { buttonVariants } from "@/components/ui/button";
import { Image } from 'astro:assets';
import joshuaImage from '../../../assets/joshua-ford-family-profile_nw_79fe0e22.jpg';
import saliciaImage from '../../../assets/salicias-profile_nw_7fb06e56.jpg';
import jacksonImage from '../../../assets/jackson_ford_nw_10531fa1.jpg';
import { getPostsByAuthor, getAuthorBySlug, getAuthors, getAuthorFullName } from '@/lib/wordpress';

// Generate static paths for all authors
export async function getStaticPaths() {
  try {
    // Fetch all authors
    const allAuthors = await getAuthors();
    
    // Generate paths for each author
    const paths = await Promise.all(allAuthors.map(async (author) => {
      // Fetch posts for this author
      const authorPosts = await getPostsByAuthor(author.id, 20);
      
      return {
        params: { slug: author.slug },
        props: { 
          author,
          authorPosts
        }
      };
    }));
    
    return paths;
  } catch (error) {
    console.error('Error generating static paths for authors:', error);
    return []; // Return empty array if fetch fails
  }
}

// Get the author data and posts from props
const { author, authorPosts } = Astro.props;

// Get avatar URL
const avatarUrl = author.avatar_urls ? author.avatar_urls['96'] : '';

// Map family members to their images
const familyImages: Record<string, string> = {
  'Joshua Ford': joshuaImage.src,
  'Salicia Ford': saliciaImage.src,
  'Jackson Ford': jacksonImage.src,
  'Finley Ford': ''
};

// Use family image if available, otherwise use avatar
// Get the display name using our mapping function
const displayName = getAuthorFullName(author.name);

// Use family image if available, otherwise use avatar
const authorImage = familyImages[displayName] || avatarUrl;
---

<BaseLayout 
  title={`${displayName} - The Ford Family Blog`}
  description={author.description || `Articles by ${displayName} from The Ford Family Blog.`}
>
  <div class="bg-muted/20 py-16 border-b border-primary/10">
    <div class="container mx-auto">
      <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
        {authorImage && (
          <div class="w-32 h-32 rounded-full overflow-hidden flex-shrink-0 scrapbook-photo" style="--rotate: 0deg">
            <div class="scrapbook-tape"></div>
            <img 
              src={authorImage} 
              alt={author.name}
              class="w-full h-full object-cover"
            />
          </div>
        )}
        <div class="flex-1 text-center md:text-left">
          <h1 class="text-4xl font-bold font-display mb-3 text-primary-foreground">
            {displayName}
          </h1>
          {author.description && (
            <p class="text-lg text-muted-foreground mb-4 max-w-2xl">
              {author.description}
            </p>
          )}
          <div class="flex flex-wrap gap-3 justify-center md:justify-start">
            {author.url && (
              <a 
                href={author.url}
                target="_blank" 
                rel="noopener noreferrer"
                class={buttonVariants({ variant: "outline", size: "sm" })}
              >
                <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/></svg>
                Website
              </a>
            )}
            <a 
              href="/blog"
              class={buttonVariants({ variant: "outline", size: "sm" })}
            >
              <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"/></svg>
              Back to Blog
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <main class="py-16">
    <div class="container mx-auto">
      <h2 class="text-2xl font-bold font-display mb-8 text-primary-foreground">
        Posts by {displayName}
      </h2>
      
      {authorPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {authorPosts.map((post) => (
            <article class="scrapbook-paper bg-white/90">
              {post.imageUrl && (
                <div class="mb-4">
                  <div class="scrapbook-photo w-full" style={`--rotate: ${Math.random() > 0.5 ? "" : "-"}${Math.floor(Math.random() * 3)}deg;`}>
                    <div class="scrapbook-tape"></div>
                    <img 
                      src={post.imageUrl} 
                      alt={post.title}
                      class="w-full h-48 object-cover rounded-sm"
                    />
                  </div>
                </div>
              )}
              <div class="mb-3">
                <a 
                  href={post.categorySlug ? `/blog/category/${post.categorySlug}` : '#'} 
                  class="inline-block px-3 py-1 bg-primary/10 text-primary-foreground text-xs rounded-full hover:bg-primary/20 transition-colors"
                >
                  {post.category}
                </a>
              </div>
              <h3 class="text-xl font-bold font-display mb-2 leading-tight">
                <a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors">
                  {post.title}
                </a>
              </h3>
              <p class="text-muted-foreground text-sm mb-4 line-clamp-3">
                {post.excerpt}
              </p>
              <div class="flex justify-between items-center text-xs text-muted-foreground mb-4">
                <span>{post.date}</span>
              </div>
              <a 
                href={`/blog/${post.slug}`} 
                class={buttonVariants({ variant: "outline", size: "sm" })}
              >
                Read Post
              </a>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <h2 class="text-2xl font-bold font-display mb-4">No Posts Found</h2>
          <p class="text-muted-foreground mb-6">There are no posts by this author yet. Check back soon!</p>
          <a 
            href="/blog" 
            class={buttonVariants({ variant: "default" })}
          >
            Back to Blog
          </a>
        </div>
      )}
    </div>
  </main>
</BaseLayout>
