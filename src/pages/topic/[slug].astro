---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { buttonVariants } from "@/components/ui/button";
import { getPosts } from '@/lib/wordpress';

// Generate static paths for all topics
export async function getStaticPaths() {
  const possibleTopics = [
    'faith',
    'chronic-illness',
    'homeschooling',
    'entrepreneurship',
    'inventions',
    'family',
    'design',
    'faith-health'
  ];

  return possibleTopics.map(topic => ({
    params: { slug: topic }
  }));
}

// Get the topic slug from the URL
const { slug } = Astro.params;

// Map the slug to a display-friendly title
const topicTitles: Record<string, string> = {
  'faith': 'Faith',
  'chronic-illness': 'Chronic Illness',
  'homeschooling': 'Homeschooling',
  'entrepreneurship': 'Entrepreneurship',
  'inventions': 'Inventions',
  'family': 'Family',
  'design': 'Design',
  'faith-health': 'Faith & Health'
};

// Get the display-friendly title, or use a capitalized version of the slug
const topicTitle = topicTitles[slug as string] || 
  (slug as string).split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ');

// Fetch all posts from WordPress API
let allPosts = [];
try {
  console.log(`Fetching posts for topic page: ${slug}`);
  allPosts = await getPosts(100); // Get more posts to ensure we catch all relevant ones
  console.log(`Successfully fetched ${allPosts.length} posts for filtering by topic`);
} catch (error) {
  console.error('Error fetching WordPress posts for topic page:', error);
}

// Filter posts by topic - check both category and tags
const topicPosts = allPosts.filter(post => {
  const categoryMatches = post.category.toLowerCase() === (slug as string).toLowerCase() || 
                         post.category.toLowerCase().includes((slug as string).toLowerCase()) ||
                         (post.categorySlug && post.categorySlug.toLowerCase() === (slug as string).toLowerCase());
  
  const tagMatches = post.tags?.some(tag => 
    tag.name.toLowerCase() === (slug as string).toLowerCase() || 
    tag.name.toLowerCase().includes((slug as string).toLowerCase()) ||
    tag.slug.toLowerCase() === (slug as string).toLowerCase()
  );
  
  return categoryMatches || tagMatches;
});

console.log(`Filtered to ${topicPosts.length} posts for topic: ${slug}`);

// Description based on topic
const descriptions: Record<string, string> = {
  'faith': 'Explore articles about faith, spirituality, and how belief shapes our family\'s journey.',
  'chronic-illness': 'Resources and personal stories about navigating life with chronic health conditions.',
  'homeschooling': 'Tips, strategies, and experiences from our homeschooling journey.',
  'entrepreneurship': 'Insights into building businesses and the entrepreneurial mindset.',
  'inventions': 'Projects, innovations, and creative problem-solving from our family inventors.',
  'family': 'Stories and reflections on family life, relationships, and creating meaningful memories.',
  'design': 'Creative projects, design principles, and artistic expression.',
  'faith-health': 'Exploring the intersection of faith and health in daily life.'
};

const description = descriptions[slug as string] || `Articles and resources related to ${topicTitle}.`;
---

<BaseLayout 
  title={`${topicTitle} - The Ford Family Blog`}
  description={description}
>
  <div class="bg-muted/20 py-16 border-b border-primary/10">
    <div class="container mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold font-display mb-4 text-primary-foreground">
        {topicTitle}
      </h1>
      <p class="text-xl max-w-2xl mx-auto text-muted-foreground mb-8">
        {description}
      </p>
    </div>
  </div>

  <main class="py-16">
    <div class="container mx-auto">      
      {topicPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {topicPosts.map((post) => (
            <article class="scrapbook-paper bg-white/90">
              {post.imageUrl && (
                <div class="mb-4">
                  <div class="scrapbook-photo w-full" style={`--rotate: ${Math.random() > 0.5 ? "" : "-"}${Math.floor(Math.random() * 3)}deg;`}>
                    <div class="scrapbook-tape"></div>
                    <img 
                      src={post.imageUrl} 
                      alt={post.title}
                      class="w-full h-48 object-cover rounded-sm"
                    />
                  </div>
                </div>
              )}
              <div class="mb-3">
                <a 
                  href={post.categorySlug ? `/blog/category/${post.categorySlug}` : '#'} 
                  class="inline-block px-3 py-1 bg-primary/10 text-primary-foreground text-xs rounded-full hover:bg-primary/20 transition-colors"
                >
                  {post.category}
                </a>
              </div>
              <h3 class="text-xl font-bold font-display mb-2 leading-tight">
                <a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors">
                  {post.title}
                </a>
              </h3>
              <p class="text-muted-foreground text-sm mb-4 line-clamp-3">
                {post.excerpt}
              </p>
              <div class="flex justify-between items-center text-xs text-muted-foreground mb-4">
                <a 
                  href={post.authorSlug ? `/blog/author/${post.authorSlug}` : '#'}
                  class="hover:text-primary transition-colors"
                >
                  {post.author}
                </a>
                <span>{post.date}</span>
              </div>
              <a 
                href={`/blog/${post.slug}`} 
                class={buttonVariants({ variant: "outline", size: "sm" })}
              >
                Read Post
              </a>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <h2 class="text-2xl font-bold font-display mb-4">No Posts Found</h2>
          <p class="text-muted-foreground mb-6">We couldn't find any posts about {topicTitle} at the moment. Check back soon!</p>
          <a 
            href="/blog" 
            class={buttonVariants({ variant: "default" })}
          >
            Back to Blog
          </a>
        </div>
      )}
    </div>
  </main>
</BaseLayout>
