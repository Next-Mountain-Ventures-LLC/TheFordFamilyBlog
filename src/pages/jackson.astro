let jacksonPosts = [];
try {
  const posts = await getPostsByAuthor("Jackson Ford", 10);
  jacksonPosts = posts;
} catch (error) {
  console.error("Error fetching posts for Jackson:", error);
}
---

<BaseLayout
  title="Jackson Ford - Animal Lover & Young Inventor | The Ford Family"
  description="Meet Jackson Ford, a young inventor, animal lover, and 3D printing enthusiast who creates innovative products for pets and animal care."
>
  <!-- Background animal pattern and animation -->
  <div class="animal-bg min-h-screen bg-gradient-to-b from-teal-900 via-teal-800 to-teal-900">
    <!-- Floating paw animations -->
    <div class="floating-paw" style="left: 10%; top: 20%;"></div>
    <div class="floating-paw" style="left: 30%; top: 60%;"></div>
    <div class="floating-paw" style="left: 70%; top: 30%;"></div>
    <div class="floating-paw" style="left: 85%; top: 70%;"></div>
    <div class="floating-paw" style="left: 50%; top: 90%;"></div>
    
    <!-- Hero Section -->
    <section class="relative py-24 overflow-hidden border-b border-teal-700">
      <div class="container mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div class="order-2 lg:order-1 animate-fade-in z-10">
            <div class="inline-block bg-teal-800/60 px-4 py-1 rounded-full text-teal-100 text-sm font-medium mb-6 backdrop-blur-sm">
              Animal Lover & Young Inventor
            </div>
            <h1 class="text-4xl md:text-6xl font-bold font-display mb-6 text-white leading-tight">
              Jackson Ford
            </h1>
            <p class="text-xl text-teal-100 mb-6 font-medium">
              3D Printing Enthusiast, Pet Owner & Wildlife Advocate
            </p>
            <div class="prose prose-lg mb-8 max-w-none text-teal-100">
              <p class="text-lg">
                As a young inventor and animal lover, I'm passionate about creating innovative solutions for pets and wildlife. I started my journey with 3D printing at age 10 and quickly began designing products for my own pets.
              </p>
              <p class="text-lg">
                Now I run my own small business selling 3D printed pet accessories, volunteer at the local animal shelter, and share my love for animals through my designs and inventions.
              </p>
            </div>
            
            <div class="flex flex-wrap gap-4 mt-8">
              <a 
                href="#pets"
                class={buttonVariants({ size: "lg", className: "bg-teal-600 hover:bg-teal-700 text-white border-none" })}
              >
                Meet My Pets
              </a>
              <a 
                href="https://www.youtube.com/@TheFordFamilyLife"
                target="_blank"
                rel="noreferrer"
                class={buttonVariants({ variant: "outline", size: "lg", className: "text-white border-teal-400 hover:bg-teal-700/50" })}
              >
                YouTube Channel
              </a>
            </div>
          </div>
          <div class="order-1 lg:order-2 flex justify-center relative z-10">
            <div class="absolute w-64 h-64 rounded-full bg-teal-500/20 blur-3xl -z-10 opacity-50 animate-pulse"></div>
            <div class="scrapbook-photo" style="--rotate: -1deg">
              <div class="scrapbook-tape"></div>
              <img 
                src={jacksonImage.src} 
                alt="Jackson Ford" 
                class="rounded-sm max-w-sm w-full shadow-xl object-cover hover:scale-[1.01] transition-all duration-300 border-4 border-teal-200"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Blog Posts Section -->
    {jacksonPosts.length > 0 && (
      <section id="blog" class="py-16 bg-teal-800/30 backdrop-blur-sm">
        <div class="container mx-auto">
          <BlogCarousel 
            client:visible
            title="Jackson's Articles"
            description="Sharing my adventures with animals, 3D printing projects, and invention ideas."
            posts={jacksonPosts}
          />
        </div>
      </section>
    )}

    <!-- Pet Profiles Section -->
    <section id="pets" class="py-16 bg-teal-900/70 backdrop-blur-sm">
      <div class="container mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold font-display mb-6 text-center text-white">
          Meet My Pets
        </h2>
        <p class="text-center text-teal-100 mb-12 max-w-3xl mx-auto">
          These are my furry (and not-so-furry) friends who inspire me every day and help test my inventions!
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {pets.map((pet) => (
            <div class="pet-card bg-teal-800/40 backdrop-blur-sm border border-teal-700">
              <img 
                src={pet.image} 
                alt={pet.name}
                class="w-full h-56 object-cover"
              />
              <div class="p-6">
                <div class="flex justify-between items-center mb-2">
                  <h3 class="text-xl font-bold text-white">{pet.name}</h3>
                  <span class="px-3 py-1 bg-teal-700 text-teal-100 text-xs rounded-full">
                    {pet.type}
                  </span>
                </div>
                <div class="flex space-x-4 mb-4 text-teal-200 text-sm">
                  <span>{pet.breed}</span>
                  <span>Age: {pet.age}</span>
                </div>
                <p class="text-teal-100 text-sm">
                  {pet.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Timeline Section -->
    <section id="timeline" class="py-16 bg-teal-800/50 backdrop-blur-sm">
      <div class="container mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold font-display mb-6 text-center text-white">
          My Animal Journey
        </h2>
        <p class="text-center text-teal-100 mb-12 max-w-3xl mx-auto">
          A timeline of my life events and experiences with animals.
        </p>
        
        <div class="max-w-3xl mx-auto border-l-2 border-teal-500 pl-10 space-y-8 relative">
          {timelineEvents.map((event) => (
            <div class={`animal-timeline-item ${event.icon} bg-teal-800/30 backdrop-blur-sm p-6 rounded-lg border border-teal-700`}>
              <div class="flex justify-between items-center mb-2">
                <h3 class="text-lg font-bold text-white">{event.year}</h3>
                {event.animalRelated && (
                  <span class="px-3 py-1 bg-teal-700 text-teal-100 text-xs rounded-full">
                    Animal Related
                  </span>
                )}
              </div>
              <p class="text-teal-100">
                {event.event}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Animal Gallery -->
    <section id="gallery" class="py-16 bg-teal-900/70 backdrop-blur-sm">
      <div class="container mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold font-display mb-6 text-center text-white">
          Animal Gallery
        </h2>
        <p class="text-center text-teal-100 mb-12 max-w-3xl mx-auto">
          A collection of my favorite animal photos that inspire my 3D designs.
        </p>
        
        <div class="animal-gallery">
          {galleryImages.map((image, index) => (
            <div class="gallery-item" style={`--rotate: ${(index % 2 === 0) ? "1deg" : "-1deg"}`}>
              <img 
                src={image.url} 
                alt={image.caption}
              />
              <div class="gallery-caption">
                <p class="text-sm font-medium">{image.caption}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- 3D Products Section -->
    <section id="products" class="py-16 bg-teal-800/40 backdrop-blur-sm">
      <div class="container mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold font-display mb-6 text-center text-white">
          My 3D Printed Animal Products
        </h2>
        <p class="text-center text-teal-100 mb-12 max-w-3xl mx-auto">
          Check out my latest 3D printed products designed specifically for pets and animal lovers.
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {products.map((product) => (
            <div class="product-card bg-teal-800/30 backdrop-blur-sm border border-teal-700">
              {product.bestseller && (
                <div class="product-badge px-3 py-1 bg-amber-600 text-white text-xs font-bold rounded-full">
                  Bestseller
                </div>
              )}
              <div class="h-48 overflow-hidden">
                <img 
                  src={product.image} 
                  alt={product.title}
                  class="w-full h-full object-cover"
                />
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold text-white mb-2">{product.title}</h3>
                <p class="text-teal-100 text-sm mb-4">
                  {product.description}
                </p>
                <div class="flex justify-between items-center">
                  <span class="text-teal-300 font-bold">{product.price}</span>
                  <a 
                    href="#"
                    class={buttonVariants({ size: "sm", className: "bg-teal-600 hover:bg-teal-700 text-white border-none" })}
                  >
                    View Product
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        <div class="text-center mt-12">
          <a 
            href="#"
            class={buttonVariants({ size: "lg", className: "bg-teal-600 hover:bg-teal-700 text-white border-none" })}
          >
            View All Products
          </a>
        </div>
      </div>
    </section>
    
    <!-- Contact Section -->
    <section id="contact" class="py-16 bg-teal-900/80 backdrop-blur-sm">
      <div class="container max-w-4xl mx-auto">
        <div class="bg-teal-800/40 border border-teal-700 p-8 rounded-lg backdrop-blur-sm">
          <h2 class="text-3xl font-bold font-display mb-6 text-center text-white">
            Get In Touch
          </h2>
          <p class="text-center text-teal-100 mb-8">
            Have questions about my 3D printed pet products or want to share your own animal stories? Send me a message!
          </p>
          
          <form class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="name" class="block text-sm font-medium text-teal-100 mb-1">Name</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  class="w-full px-4 py-2 bg-teal-700/50 border border-teal-600 rounded-md text-white placeholder:text-teal-300"
                  placeholder="Your name"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-teal-100 mb-1">Email</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  class="w-full px-4 py-2 bg-teal-700/50 border border-teal-600 rounded-md text-white placeholder:text-teal-300"
                  placeholder="Your email"
                />
              </div>
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-teal-100 mb-1">Message</label>
              <textarea 
                id="message" 
                name="message" 
                rows="4" 
                class="w-full px-4 py-2 bg-teal-700/50 border border-teal-600 rounded-md text-white placeholder:text-teal-300"
                placeholder="Your message"
              ></textarea>
            </div>
            <div class="text-center">
              <button 
                type="submit" 
                class={buttonVariants({ size: "lg", className: "bg-teal-600 hover:bg-teal-700 text-white border-none" })}
              >
                Send Message
              </button>
            </div>
          </form>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>